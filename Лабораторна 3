SELECT * FROM books WHERE ціна IS NULL OR ціна = 0;
SELECT * FROM books WHERE ціна IS NOT NULL AND тираж IS NULL;
SELECT * FROM books WHERE дата_видання IS NULL;
SELECT * FROM books WHERE дата_видання >= DATE('now', '-1 year');
SELECT * FROM books WHERE новинка = TRUE ORDER BY ціна ASC;
SELECT * FROM books WHERE сторінки BETWEEN 300 AND 400 ORDER BY назва DESC;
SELECT * FROM books WHERE ціна BETWEEN 20 AND 40 ORDER BY дата_видання DESC;
SELECT * FROM books ORDER BY назва ASC, ціна DESC;
SELECT * FROM books WHERE ціна / сторінки < 0.1;
SELECT LENGTH(назва) AS символів_в_назві, UPPER(SUBSTR(назва, 1, 20)) AS перші_20_символів FROM books;
SELECT UPPER(SUBSTR(назва, 1, 10)) || '...' || UPPER(SUBSTR(назва, -10)) AS назва_з_роздільником FROM books;
SELECT назва, дата_видання, STRFTIME('%d', дата_видання) AS день, STRFTIME('%m', дата_видання) AS місяць, STRFTIME('%Y', дата_видання) AS рік FROM books;
SELECT назва, дата_видання, STRFTIME('%d / %m / %Y', дата_видання) AS дата_формат FROM books;
SELECT код, ціна, ціна * 30 AS ціна_в_грн, ціна * 0.9 AS ціна_в_євро, ціна * 2.5 AS ціна_в_руб FROM books;
SELECT код, ціна, CAST(ROUND(ціна, 0) AS INT) AS ціна_без_копійок FROM books;
INSERT INTO books (код, ціна, назва, дата_видання, тираж, новинка) VALUES (1001, 25.99, 'Нова книга', '2023-05-01', 1000, TRUE);
INSERT INTO books (код, ціна, назва, дата_видання) VALUES (1002, 19.99, 'Інша нова книга', '2023-06-15');
DELETE FROM books WHERE дата_видання < '1990-01-01';
UPDATE books SET дата_видання = DATE('now') WHERE дата_видання IS NULL;
UPDATE books SET новинка = TRUE WHERE дата_видання > '2005-12-31';
